<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
        						 http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="desafiolivro">

		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<class>br.com.bluesoft.desafiolivro.model.Livro</class>
		<class>br.com.bluesoft.desafiolivro.model.Usuario</class>
		<class>br.com.bluesoft.desafiolivro.model.Ranking</class>

		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
			<property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem;shutdown=true" />
 			<property name="desafiolivrojdbc.password" value="" />
 			<property name="hibernate.show_sql" value="true" />
		</properties>

	</persistence-unit>

</persistence>